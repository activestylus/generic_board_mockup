<div class="row-fluid">
  <div class="span8">
    <%= partial 'shared/job_filters', locals: {:pre => 'plain' } %>
  </div>
  <div class="span4">
    <a class="mail break" href="#">Sign up for email alerts</a>
    <div id="post-a-job" class="pane bordered">
      <h2>Post a Job</h2>
      <p>Quick and easy cost-effective recruitment<br />
      <strong>Call us now at 0844 5619233 to find out more.</strong></p>
      <%= partial 'shared/creditcards' %>
      <div class="clear tall"></div>
      <input class="btn btn-primary clear" name="commit" type="submit" value="Post a job" />
      <a href="#" class="space strong">Recruiter login</a>
    </div>
  </div>
</div>

<div class="row-fluid home-row2">
  <div class="span4">
    <div class="pane bordered scroll">
      <h2>Featured Jobs</h2>

        <ul class="column spaced scroll-pane" id="featured-jobs">
          <% 3.times do %>
          <li><small>Thousands of quality jobs over €50K in Europe. Find yours today!</small></li>
          <li>
            <h3><a href="#">Web Solution Business Manager</a></h3><a href="#">London, €38,000.00 - €75,000.00</a>
          </li>
          <li>
            <h3><a href="#">Senior Java Developer</a></h3><a href="#">London,
            €55,000.00 - €75,000.00</a>
          </li>
          <li class="last">
            <h3><a href="#">Marketing Executive - German Speaking</a></h3><a href=
            "#">London, €60,000.00 -
            €75,000.00</a>
          </li>
          <% end %>
        </ul>

    </div>
  </div>
  <div class="span4">
    <div class="pane bordered">
      <h2>Upload your CV</h2>
      <img src="images/thumbs/girl-on-laptop.png" class="break" />
      <p>Let employees find you - minimize the search for jobs that best fit you by
      setting your CV status to "Public"</p>
      <img src="images/thumbs/convo.png" />
    </div>
  </div>
  <div class="span4">
    <div class="pane bordered recommended boards">
      <h2>Recommended Job boards</h2>
      <p>Expand your reach b posting jobs on multiple job boards, recommended by us. <span class='powered'>Powered by 1000jobboersen.de</span></p>
      <% [(1..3),(4..6)].each do |range| %>
        <% range.each do |n| %>
          <div class="logo" style="background-image:url(images/board_logos/0<%= n %>.png)">
            <%= n %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<div class="pane shadowed">
  <h2 class="recruiters">Featured Recruiters</h2>
  <%= partial "shared/featured_recruiters" %>
</div>