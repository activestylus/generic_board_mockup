<% @title = "Recruiter-Payment-Card" %>

<%= partial "shared/recruiter_menu", locals: {active: "Post a job"} %>

<div id="post_job" class="page pad-all">

  <div class="breadcrumbs">Post a Job / Cart Summary / Checkout</div>

  <div class="main col first">    
    <%= partial "shared/checkout_table", locals: { paying: false }  %>
    
    <div class="hr deboss"><div>&nbsp;</div></div>
    
    <div class="payment labels-left">
      <h2>Payment and Billing information</h2>
      <div class="col billing">
      	<h2>Billing Address</h2>
      	<% ["First Name",
      		"Surname",
      		"Email",
      		"Address",
      		"Town/City",
      		"Postcode",
      		"Country"].each do |field| %>
        <div class="field">
          <label><%= field %></label>
          <input type="text" class="text" />
          <% if field == "Address" %>
            <input type="text" class="text" />
          <% end %>
        </div>
        <div class="clear"></div>
        <% end %>
      </div>
      
      <div class="col card">
      	<h2>Card Details</h2>
      	<%= partial "shared/creditcards" %>
      	<div class="clear"></div>
      	<div class="field">
      	  <label>Card type</label>
      	  <select>
      	  	<option>Select Card</option>
      	  	<option>Visa</option>
      	  	<option>MasterCard</option>
      	  	<option>Amex</option>
      	  </select>
      	</div>
      	<div class="clear"></div>
      	<% ["Name", "Card Number"].each do |field| %>
      	<div class="field">
      	  <label><%= field %></label>
      	  <input type="text" class="text" />
      	</div>
      	<div class="clear"></div>
      	<% end %>
      	<div class="field exp">
      	  <label>Exp. Date</label>
      	  <select>
      	  	<option>Month</option>
      	  	<% (1..12).each do |n| %>
      	  	  <option><%= n %></option>
      	  	<% end %>
      	  </select>
      	  <select>
      	  	<option>Year</option>
      	  	<% (2012..2022).each do |n| %>
      	  	  <option><%= n %></option>
      	  	<% end %>
      	  </select>
      	  
      	</div>
      </div>
      <div class="finalize">
      	<div class="checkboxes">
      	  <input type="checkbox" id="accept_terms" />
      	  <label for="accept_terms">Accept terms and conditions</label>
      	</div>
      	<input type="submit" value="Purchase" class="btn btn-large btn-join">
      	<div class="clear"></div>
      </div>
      <div class="clear"></div>
    </div>
    

  
  </div>

  <div class="side col thin-panes">
    <h2 class="pane-title">Cart Summary</h2>
    <%= partial "shared/cart_checkout", locals: { button: false } %>        
    <%= partial "shared/chat_pane" %>
    <div class="buy credits">
      <h2>Buy Credits</h2>
      <p>Buy online, or call your account manager on 0845 241 9293</p>
      <a href="#" class="btn btn-join btn-medium">Buy Credits</a>
    </div>
  </div>
  <div class="clear"></div>

</div>